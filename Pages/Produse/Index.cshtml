@page
@model Mags.Pages.Produse.IndexModel

@{
    ViewData["Title"] = "Produse";
}

<h1>PRODUSE</h1>

<p>
    <a asp-page="Create">Adaugă un produs nou ...</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].EAN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].Lungime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].Latime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].Inaltime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Produs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EAN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lungime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inaltime)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
